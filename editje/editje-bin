import os
import sys
import re

import elementary
import edje

from editje.editje import Editje
from editje.openfile import OpenFile
import editje.swapfile as swapfile
from editje.popup_win import PopupWindow

def cancel(bt, pop):
    pop.hide()
    pop.delete()
def open_ignore_swap(bt, data):
    pop, sf = data
    sf.open(swapfile.REPLACE)
    pop.hide()
    editje = Editje(sf)
    editje.show()
    pop.delete()
def open_recovery_swap(bt, data):
    pop, sf = data
    sf.open(swapfile.RESTORE)
    pop.hide()
    editje = Editje(sf)
    editje.show()
    pop.delete()

if __name__ == "__main__":
    elementary.init()
    elementary.finger_size_set(15)
    elementary.policy_set(elementary.ELM_POLICY_QUIT,
                          elementary.ELM_POLICY_QUIT_LAST_WINDOW_CLOSED)

    spliter = re.compile(r"(.*\.ed[cj])(?:\:(.*))?")

    args = sys.argv[1:]
    if args:
        for arg in args:
            try:
                r = spliter.match(arg)
                if r:
                    file, group = r.groups()
                else:
                    file = arg
                    group = None
                sf = swapfile.SwapFile()
                sf.file = os.path.realpath(file)
                sf.open()
            except swapfile.CacheAlreadyExists, e:
                pop = PopupWindow()
                pop.title = "Editje - Swap file already exists"

                lb = elementary.Label(pop)
                lb.label_set("Swap file to " + file + " already exists<br>" +
                             "Another program may be editing the same file.<br>" +
                             "Or an edit session for this file crashed.")
                pop.pack_end(lb)
                lb.show()

                pop.action_add("Ignore Swap", open_ignore_swap, data=(pop, sf))
                pop.action_add("Recovery", open_ignore_swap, data=(pop, sf))
                pop.action_add("Abort", cancel, data=pop)

                pop.show()
                continue
            except swapfile.CompileError, e:
                pop = PopupWindow()
                pop.title = "Editje - Compiler Error"

                lb = elementary.Label(pop)
                lb.label_set("Compile Error: " + file + "<br>" + e.message)
                pop.pack_end(lb)
                lb.show()

                pop.action_add("OK", cancel, data=pop)

                pop.show()
                continue
            except Exception, e:
                pop = PopupWindow()
                pop.title = "Editje - File Error"

                lb = elementary.Label(pop)
                lb.label_set("Error with file: " + file + "<br>" + str(e))
                pop.pack_end(lb)
                lb.show()

                pop.action_add("OK", cancel, data=pop)

                pop.show()
                continue

            editje = Editje(sf)
            if group and group in edje.file_collection_list(file):
                editje.group = group
            editje.show()
    else:
        OpenFile().show()

    elementary.run()
    elementary.shutdown()
