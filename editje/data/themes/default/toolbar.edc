#define TOOLBAR_BT_FULL(bt_name, image_ico, colorclass, font_name, font_size) \
         part {                                                      \
            name: bt_name".icon";                                    \
            type: IMAGE;                                             \
            mouse_events: 0;                                         \
            description {                                            \
               state: "default" 0.0;                                 \
               image.normal: image_ico;                              \
               align: 0.5 0.0;                                       \
               aspect: 1.0 1.0;                                      \
               min: 24 24;                                           \
               rel1 {                                                \
                  to: bt_name;                                       \
                  relative: 0.15 0.0;                                \
               }                                                     \
               rel2 {                                                \
                  to_x: bt_name;                                     \
                  relative: 0.85 0.0;                                \
               }                                                     \
            }                                                        \
            description {                                            \
               state: "over" 0.0;                                    \
               image.normal: image_ico;                              \
               align: 0.5 0.0;                                       \
               aspect: 1.0 1.0;                                      \
               min: 48 48;                                           \
               rel1 {                                                \
                  to: bt_name;                                       \
                  relative: 0.15 0.0;                                \
               }                                                     \
               rel2 {                                                \
                  to_x: bt_name;                                     \
                  relative: 0.85 0.0;                                \
               }                                                     \
            }                                                        \
            description {                                            \
               state: "clicked" 0.0;                                 \
               color: 127 127 127 255;                               \
               image.normal: image_ico;                              \
               align: 0.5 0.0;                                       \
               aspect: 1.0 1.0;                                      \
               min: 24 24;                                           \
               rel1 {                                                \
                  to: bt_name;                                       \
                  relative: 0.15 0.0;                                \
               }                                                     \
               rel2 {                                                \
                  to_x: bt_name;                                     \
                  relative: 0.85 0.0;                                \
               }                                                     \
            }                                                        \
         }                                                           \
         part {                                                      \
            name: bt_name".label";                                   \
            type: TEXT;                                              \
            mouse_events: 0;                                         \
            description {                                            \
               state: "default" 0.0;                                 \
               color_class: colorclass;                              \
               align: 0.5 0.0;                                       \
               text {                                                \
                  text: "TITLE";                                     \
                  font: font_name;                                   \
                  size: font_size;                                   \
                  align: 0.5 0.5;                                    \
               }                                                     \
               rel1 {                                                \
                  to_x: bt_name;                                     \
                  to_y: bt_name".icon";                              \
                  relative: 0.0 1.0;                                 \
                  offset: 0 2;                                       \
               }                                                     \
               rel2.to: bt_name;                                     \
            }                                                        \
         }                                                           \
                                                                     \
         programs {                                                  \
            program {                                                \
               name: bt_name".mouse.in";                             \
               signal: "mouse,in";                                   \
               source: bt_name;                                      \
               action: STATE_SET "over" 0.0;                         \
               transition: ACCELERATE 0.2;                           \
               target: bt_name".icon";                               \
            }                                                        \
            program {                                                \
               name: bt_name".mouse.out";                            \
               signal: "mouse,out";                                  \
               source: bt_name;                                      \
               action: STATE_SET "default" 0.0;                      \
               transition: DECELERATE 0.2;                           \
               target: bt_name".icon";                               \
            }                                                        \
            program {                                                \
               name: bt_name".mouse.clicked";                        \
               signal: "mouse,down,1";                               \
               source: bt_name;                                      \
               action: STATE_SET "clicked" 0.0;                      \
               transition: LINEAR 0.2;                               \
               target: bt_name".icon";                               \
               after: bt_name".mouse.out";                           \
            }                                                        \
         }

#define TOOLBAR_BT(bt_name, image_ico, colorclass)                   \
   TOOLBAR_BT_FULL(bt_name, image_ico, colorclass, "Sans:style=Bold", 10)

#define TOOLBAR_BT_MAIN(bt_name, image_ico)                             \
   TOOLBAR_BT_FULL(bt_name, image_ico, "default_label", "Sans:style=Bold", 10)

#define TOOLBAR_BT_SUB(bt_name, image_ico)                              \
   TOOLBAR_BT_FULL(bt_name, image_ico, "secondary_label", "Sans", 9)

