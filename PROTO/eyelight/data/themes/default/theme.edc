{                                               \
    name: "area_item_"area"_"id;                \
    type: TEXTBLOCK;                            \
    mouse_events: 0;                            \
    clip_to: "slide";                               \
    scale: 1; \
    description                                 \
    {                                           \
        state: "default" 0.0;                   \
        visible: 1;                             \
        align: 0.1 0.1;                         \
        rel1                                    \
        {                                       \
            relative: (0.0+(depth*0.04)) 1.0;   \
            to_y: "area_item_"area"_"id_prev;   \
            to_x: "area_"area;                  \
            offset: 55 15;                       \
        }                                       \
        rel2                                    \
        {                                       \
            relative: 1.0 1.0;                  \
            to_y: "area_item_"area"_"id_prev;   \
            to_x: "area_"area;                  \
