<eon>
	<style>
		<fade id="hs01" x="0%" y="0%" w="100%" h="100%" step="0.5"
				matrixspace="0">
			<anim id="anim01" name="step" begin="#sh01.click"
					 repeat="-1">
				<key value="1" start="0s" calc="0"/>
				<key value="0" start="3s" calc="0"/>
				<key value="1" start="6s" calc="0"/>
			</anim>
			<image file="tiger.png" x="0%" y="0%" w="100%" h="100%"
					coordspace="0" matrixspace="0"/>
			<checker x="0%" y="0%" color1="white" color2="red"
					id="sq01" coordspace="0"
					matrixspace="0"/>
		</fade>
	</style>
	<canvas w="100%" h="100%">
		<rect x="0%" y="0%" w="100%" h="100%" color="white"/>
		<circle id="sh01" x="50%" y="50%" radius="100"
				fill_paint="#hs01" stroke_width="5"
				stroke_color="black"/>
	</canvas>
</eon>
