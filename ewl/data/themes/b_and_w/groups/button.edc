group {
	name: "ewl/button/other";
}

group {
	name: "ewl/button/radio/item";
	parts {
		part {
			name: "base";
			mouse_events: 0;
			description {
				state: "default" 0.0;
				min: 16 16;
				max: 16 16;
				image.normal: "radio_base.png";
			}
		}
		part {
			name: "mark";
			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1 {
					to: "base";
					offset: -5 -5;
				}
				rel2 {
					to: "base";
					offset: 4 4;
				}
				color: 0 0 0 0;
				image.normal: "radio_on.png";
			}
			description {
				state: "selected" 0.0;
				inherit: "default" 0.0;
				rel1.offset: 0 0;
				rel2.offset: -1 -1;
				color: 255 255 255 255;
			}
		}
	}
	programs {
		program {
			name: "on";
			signal: "checked";
			source: "EWL";
			action: STATE_SET "selected" 0.0;
			transition: LINEAR 0.15;
			target: "mark";
		}
		program {
			name: "off";
			signal: "default";
			source: "EWL";
			action: STATE_SET "default" 0.0;
			transition: LINEAR 0.2;
			target: "mark";
		}
	}
}

group { 
	name: "ewl/button/check/item";
	parts {
		part {
			name: "base";
			mouse_events: 0;
			description {
				state: "default" 0.0;
				min: 16 16;
				max: 16 16;
				align: 0.0 0.5;
				fixed: 1 1;
				rel1 {
					relative: 0.0 0.0;
					offset:   2 2;
				}
				rel2 {
					relative: 0.0 1.0;
					offset:   2 -3;
				}
				image.normal: "check_base.png";
			}
		}
		part {
			name: "mark";
			mouse_events: 0;
			description {
				state: "default" 0.0;
				rel1 {
					to: "base";
					offset: -5 -5;
				}
				rel2 {
					to: "base";
					offset: 4 4;
				}
				color: 255 255 255 0;
				image.normal: "check_on.png";
			}
			description {
				state: "selected" 0.0;
				inherit: "default" 0.0;
				rel1.offset: 0 0;
				rel2.offset: -1 -1;
				color: 255 255 255 255;
			}
		}
	}
	programs {
		program {
			name: "on";
			signal: "checked";
			source: "EWL";
			action: STATE_SET "selected" 0.0;
			transition: LINEAR 0.15;
			target: "mark";
		}
		program {
			name: "off";
