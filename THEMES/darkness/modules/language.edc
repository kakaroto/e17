/* vim: set sw=3: */
group {
   name: "modules/language/main";
   max:  128 128;
   script {
      public is_active;
      public is_hilited;
   }
   parts {
      part {
	 name:          "title_bar";
	 mouse_events:  0;
	 description {
	    state:    "default" 0.0;
	    image {
	       normal: "titlebar.png";
	       border: 8 8 8 8;
	    }
	    color: 255 255 255 200;
	 }
	 description {
	    state:    "active" 0.0;
	    inherit:  "default" 0.0;
	    color: 255 255 255 255;
	 }
      }
      
      part {
	 name: "lang_clip";
	 type: RECT;
	 description {
	    state: "default" 0.0;
	    color: 255 255 255 50;
	 }
	 description {
	    state: "active" 0.0;
	    color: 255 255 255 250;
	 }
      }
      part {
	 name: "language_flag";
	 type: SWALLOW;
	 clip_to: "lang_clip";
	 description {
	    state: "default" 0.0;
	    align: 0.5 0.5;
	    rel1 {
	       to: "title_bar";
	       offset: 4 0;
	    }
	    rel2 {
	       to: "title_bar";
	       offset: -5 -1;
	    }
	 }
      }
      
      part {
	 name:           "inout";
	 type:           RECT;
	 mouse_events:   1;
	 description {
	    state: "default" 0.0;
	    color: 255 255 255 0;
	 }
      }
      part {
	 name:	   "langout";
	 type:	   TEXT;
	 effect:   SOFT_SHADOW;
	 mouse_events:  0;
         scale: 1;
	 description {
	    state:	"default" 0.0;
	    align:	0.5 0.5;
	    rel1 {
	       relative:   0.5 0.5;
	       offset:     0 0;
	    }
	    rel2 {
	       relative:   0.5 0.5;
	       offset:     0 0;
	    }
	    color:  255 255 255 100;
	    color3: DARKNESS_DARK_BLUE 200;
	    text {
	       text: "";
	       font: "DejaVu-Bold";
	       size: 10;
	       min:  1 1;
	       align: 0.5 0.5;
	       text_class: "module_small";
	    }
	 }
	 description {
	    state: "active" 0.0;
	    inherit: "default" 0.0;
	    color: 255 255 255 255;
	    color3: 0 0 0 142;
	 }
      }
   }
   programs {
      program {
	 name: "init";
	 signal: "load";
	 source: "";
	 script {
	    set_int(is_active, 0);
	    set_int(is_hilited, 0);
	 }
      }
      program {      
	 name:    "mouse_in";
	 signal:  "mouse,in";
	 source:  "inout";
	 script {
	    new val;
	    
	    val = get_int(is_active);
	    if (val == 0)
	      {
		 run_program(PROGRAM:"go_active_pre");
		 set_int(is_hilited, 1);
	      }
	 }
      }
      program {      
	 name:    "mouse_out";
	 signal:  "mouse,out";
	 source:  "inout";
	 script {
	    new val;
	    
	    val = get_int(is_active);
	    if (val == 0)
	      {
		 run_program(PROGRAM:"go_passive_pre");
		 set_int(is_hilited, 0);
	      }
	 }
      }
      program {      
	 name:    "handle_active";
	 signal:  "e,state,focused";
	 source:  "e";
	 script {
	    new val;
	    
	    set_int(is_active, 1);
	    val = get_int(is_hilited);
	    if (val == 0)
	      run_program(PROGRAM:"go_active_pre");
	 }
      }
      program {      
	 name:    "handle_passive";
	 signal:  "e,state,unfocused";
	 source:  "e";
	 script {
	    new val;
	    
	    set_int(is_active, 0);
	    val = get_int(is_hilited);
	    if (val == 1)
	      {
		 run_program(PROGRAM:"go_passive_pre");
		 set_int(is_hilited, 0);
	      }
	 }
      }
      
      program {      
	 name:    "go_active_pre";
	 signal:  "";
	 source:  "";
	 action:  STATE_SET "default" 0.0;
	 target:  "title_bar";
	 after:   "go_active";
      }
      program {
	 name:    "go_active";
	 action:  STATE_SET "active" 0.0;
	 target:  "title_bar";
	 target:  "lang_clip";
	 target:  "langout";
	 transition: LINEAR 0.1;
      }
      
      program {      
	 name:    "go_passive_pre";
	 signal:  "";
	 source:  "";
	 action:  STATE_SET "active" 0.0;
	 target:  "title_bar";
	 after:   "go_passive3";
      }
      program {
	 name:    "go_passive3";
	 action:  STATE_SET "default" 0.0;
	 target:  "title_bar";
	 target:  "lang_clip";
	 target:  "langout";
	 transition: LINEAR 0.5;
      }
   }
}


