      PARTICLE_PROGRAM("5", 0.73)
      PARTICLE_PROGRAM("6", 0.71)
      PARTICLE_PROGRAM("7", 0.83)
      PARTICLE_PROGRAM("8", 0.77)
      PARTICLE_PROGRAM("9", 0.69)
      PARTICLE_PROGRAM("10", 0.87)
      PARTICLE_PROGRAM("11", 0.81)
      PARTICLE_PROGRAM("12", 0.79)
   }
