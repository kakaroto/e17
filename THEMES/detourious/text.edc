	color: 255 255 255 255;			   		    \
    color3: 17 16 16 100;

//color3:  40 60 100 60;

#define TEXT_COLOR_DISABLED						\
	color: 128 128 128 255;						\
    color3: 170 168 169 0;						\
    color_class: "label_text_disabled";

// color: 60 60 60 128;
