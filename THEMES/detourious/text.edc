#define TEXT_COLOR_CLICKED						\
	color: 60 60 60 229;						\
    color3: 170 168 169 64;

#define TEXT_NORMAL(_text_class, _align, _min)	\
	text {										\
		text: "";								\
		font: FONT;								\
		size: TEXT_SIZE;						\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}

#define TEXT_LARGE(_text_class, _align, _min)	\
	text {										\
		text: "";								\
		font: FONT_BOLD;						\
		size: TEXT_SIZE_LARGE;					\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}

#define TEXT_SMALL(_text_class, _align, _min)	\
	text {										\
		text: "";								\
		font: FONT;								\
		size: TEXT_SIZE_SMALL;					\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}

#define TEXT_HEADER(_text_class, _align, _min)	\
	text {										\
		text: "";								\
		font: FONT_BOLD;						\
		size: TEXT_SIZE_BOLD;					\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}

#define TEXT_BOLD(_text_class, _align, _min)	\
	text {										\
		font: FONT_BOLD;						\
		size: TEXT_SIZE_BOLD;					\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}

#define TEXT_TITLE(_text_class, _align, _min)	\
	text {										\
		font: FONT_BOLD;						\
		size: TEXT_SIZE_BOLD;					\
		min: _min;								\
		align: _align;							\
		text_class: _text_class;				\
	}


