AC_PATH_PROG(EDB_CONFIG, $PROG, "", $PATH)
if test -z "$EDB_CONFIG" ; then
  edb_cflags=""
  edb_libs=""
else
  AC_DEFINE(HAVE_EDB, 1, [Have edb])
  edb_cflags=`$EDB_CONFIG --cflags`
  edb_libs=`$EDB_CONFIG --libs`
fi
