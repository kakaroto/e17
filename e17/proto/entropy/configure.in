# check for Imlib2
AC_PATH_EFL(
   imlib2,
   1.2.1,
   [
     AC_DEFINE(HAVE_IMLIB2, 1, have Imlib2)
     imlib2="Imlib2 "
     have_imlib2="yes"
   ],
