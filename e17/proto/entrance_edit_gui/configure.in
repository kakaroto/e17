AC_PATH_EFL(
   etk,
   0.1.0.001,
   [
     AC_DEFINE(HAVE_ETK, 1, have ETK)
     etk="ETK "
     AM_CONDITIONAL(HAVE_ETK, true)
     have_etk="yes"
     etk_libs=`etk-config --libs`
     etk_cflags=`etk-config --cflags`     
   ],
   [
     AC_MSG_ERROR([No Etk, can't build. Check back when we support another toolkit or just install etk already!])
   ]
)

