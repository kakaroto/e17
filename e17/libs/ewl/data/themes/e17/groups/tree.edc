group
{
	name: "ewl/tree/header/button";
	min: 16 16;

	parts
	{
		part
		{
			name: "arrow";
			mouse_events: 0;
			description
			{
				state: "default" 0.0;
				min: 16 16;
				visible: 0;
				image
				{
					normal: "e17_button_detail_down.png";
				}
				fill
				{
					smooth: 0;
				}
			}
			description
			{
				state: "ascending" 0.0;
				inherit: "default" 0.0;
				visible: 1;
			}
			description
			{
				state: "descending" 0.0;
