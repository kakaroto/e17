group
{
	name: "ewl/row";

	parts
	{
		part
		{
			name: "bg";
			type: RECT;
			mouse_events: 0;
			description
			{
				state: "default" 0.0;
				min: 5 19;
				color: 255 255 255 255;
			}
			description
			{
				state: "odd" 0.0;
				inherit: "default" 0.0;
				color: 221 221 221 100;
			}
		}
		part
		{
			name: "highlight";
			mouse_events: 0;
			type: RECT;
			description
			{
				state: "default" 0.0;
				visible: 0;
				rel1 
				{
					offset: -4 -4;
				}
				rel2
				{
					offset: 3 3;
				}
				color: 245 205 109 102;
			}
			description
			{
				state: "highlighted" 0.0;
				inherit: "default" 0.0;
				visible: 1;
			}
		}
		part
		{
			name: "selected";
			mouse_events: 0;
			type: RECT;
			description
			{
				state: "default" 0.0;
				visible: 0;
				rel1 
				{
					offset: -4 -4;
				}
				rel2
				{
					offset: 3 3;
				}
				color: 245 205 109 102;
			}
			description
			{
				state: "selected" 0.0;
				inherit: "default" 0.0;
				visible: 1;
			}
		}
	}
	programs
	{
		program
		{
			name: "odd";
			signal: "odd";
			source: "*";
			action: STATE_SET "odd" 0.0;
			transition: LINEAR 0.0;
			target: "bg";
		}
		program
		{
			name: "even";
			signal: "even";
			source: "*";
			action: STATE_SET "default" 0.0;
			transition: LINEAR 0.0;
			target: "bg";
		}
		program
		{
			name: "select";
			signal: "tree-selected";
			source: "*";
			action: STATE_SET "selected" 0.0;
			transition: DECELERATE 0.25;
			target: "selected";
		}
		program
		{
			name: "un-select";
			signal: "tree-deselect";
			source: "*";
			action: STATE_SET "default" 0.0;
			transition: ACCELERATE 0.5;
			target: "selected";
		}
		program
		{
			name: "highlight";
			signal: "mouse,in";
			source: "*";
			action: STATE_SET "highlighted" 0.0;
			transition: LINEAR 0.0;
			target: "highlight";
		}
		program
		{
			name: "un-highlight";
			signal: "mouse,out";
			source: "*";
			action: STATE_SET "default" 0.0;
			transition: LINEAR 0.0;
			target: "highlight";
		}
	}
}

