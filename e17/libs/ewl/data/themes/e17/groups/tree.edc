images
{
	image: "e17_button_detail_right.png" COMP;
	image: "e17_button_detail_up.png" COMP;
	image: "e17_button_detail_down.png" COMP;
	image: "e17_button_sm_disabled.png" COMP;
}

group
{
	name: "ewl/tree/expansion";
	parts
	{
		part
		{
			name: "expansion";
			mouse_events: 1;

			description
			{
				state: "default" 0.0;
				min: 12 12;

				rel1
				{
					relative: 0.5 0.5;
					offset: 0 0;
				}
				rel2
				{
					relative: 0.5 0.5;
					offset: -1 -1;
				}
				image
				{
					normal: "e17_button_detail_right.png";
				}
			}
			description
			{
				state: "open" 0.0;
				inherit: "default" 0.0;
				image
				{
					normal: "e17_button_detail_down.png";
				}
			}
		}
		part
		{
			name: "hide";
			type: RECT;
			mouse_events: 0;

			description
			{
				state: "default" 0.0;
				visible: 0;
				rel1
				{
					relative: 0.0 0.0;
					offset: 0 0;
					to: "expansion";
				}
				rel2
				{
					relative: 1.0 1.0;
					offset: -1 -1;
					to: "expansion";
				}
				color: 255 255 255 0;
			}
			description
			{
				state: "show" 0.0;
				inherit: "default" 0.0;
				visible: 1;
			}
		}
	}
	programs
	{
		program
		{
			name: "visible";
			signal: "default";
			source: "*";
			action: STATE_SET "show" 0.0;
			transition: LINEAR 0.0;
			target: "hide";

		}
		program
		{
			name: "hidden";
			signal: "node,default";
			source: "*";
			action: STATE_SET "default" 0.0;
			transition: LINEAR 0.0;
			target: "hide";
		}
		program
		{
			name: "collapsed";
			signal: "default";
			source: "*";
			action: STATE_SET "default" 0.0;
			transition: LINEAR 0.0;
			target: "expansion";
		}
		program
		{
			name: "expand";
			signal: "checked";
			source: "*";
			action: STATE_SET "open" 0.0;
			transition: LINEAR 0.0;
			target: "expansion";
		}
	}
}

