AC_SUBST(edb_cflags)
AC_SUBST(edb_libs)
edb_cflags=`edb-config --cflags`
edb_libs=`edb-config --libs`

AC_SUBST(ecore_cflags)
AC_SUBST(ecore_libs)
ecore_cflags=`ecore-config --cflags`
ecore_libs=`ecore-config --libs`

AC_SUBST(evas_cflags)
